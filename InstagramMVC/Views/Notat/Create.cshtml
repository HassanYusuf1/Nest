@model InstagramMVC.Models.Note

<h2>Create a Note</h2>

<form asp-action="Create" asp-controller="Notat" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="Tittel">Title</label>
        <input asp-for="Tittel" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Innhold">Caption</label>
        <textarea asp-for="Innhold" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
