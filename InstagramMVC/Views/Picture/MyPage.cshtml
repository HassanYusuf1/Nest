@model InstagramMVC.ViewModels.PicturesViewModel

@{
    var returnUrl = Url.Action("MyPage", "Picture");
    var userName = User.Identity.Name?.Split('@')[0];
}

<div class="container">
    @if (User.Identity.IsAuthenticated && !string.IsNullOrEmpty(userName))
    {
        <h2>@userName</h2>
    }
    else
    {
        <h2>Welcome!</h2>
    }
    
    <h2>My Pictures</h2>
    
    <!-- Liste over mine pictures -->
    <div class="row mt-5">
        @foreach (var picture in Model.Pictures)
        {
            <div class="col-md-4">
                @await Html.PartialAsync("_PictureCard", picture, new ViewDataDictionary(ViewData) { { "returnUrl", returnUrl } })
            </div>
        }
    </div>
    <!-- Knapp for Ã¥ navigere til Create-siden -->
    <div class="mt-4 text-center">
        <a asp-action="Create" asp-controller="Picture" class="btn btn-primary">Upload new picture</a>
    </div>
</div>
