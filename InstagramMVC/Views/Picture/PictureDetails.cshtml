@model InstagramMVC.Models.Picture

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <img src="@Model.PictureUrl" class="img-fluid" alt="@Model.Title" />
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h2>@Model.Title</h2>
            <p>@Model.Description</p>
            <p><strong>Uploaded by:</strong> @Model.UserName</p>
            <p><strong>Uploaded on:</strong> @Model.UploadDate.ToString("yyyy-MM-dd")</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <a asp-action="Edit" asp-route-id="@Model.PictureId" asp-route-source="@(ViewBag.Source)" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.PictureId" asp-route-source="@(ViewBag.Source)" class="btn btn-danger">Delete</a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <a href="@((string)ViewBag.Source == "MyPage" ? Url.Action("MyPage", "Picture") : Url.Action("Grid", "Picture"))" class="btn btn-secondary">return</a>
        </div>
    </div>
</div>
