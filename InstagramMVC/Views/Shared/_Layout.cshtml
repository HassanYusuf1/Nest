@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instagram</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    @if (ViewData["Title"]?.ToString() == "Front Page")
    {
        <link href="~/css/Layout.css" rel="stylesheet" asp-append-version="true" />
        <script src="~/js/toggleForms.js"></script> <!-- Script for toggling forms, only on Front Page -->
    }
    else
    {
        <link href="~/css/Layout.css" rel="stylesheet" />
    }
</head>
<body class="@(ViewData["Title"]?.ToString() == "Front Page" ? "front-page" : "")">

    @* Bruk SignInManager for Ã¥ sjekke om brukeren er logget inn og vise navbaren *@
    @if (SignInManager.IsSignedIn(User))
    {
        @await Html.PartialAsync("_Navbar")
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Render optional Scripts section if defined on a page -->
    @RenderSection("Scripts", required: false)
</body>
</html>
