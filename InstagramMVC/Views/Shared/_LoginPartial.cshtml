@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Front")" class="form-inline">
        <button type="submit" class="btn btn-link nav-link">Logout</button>
    </form>
}
else
{
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="card login-register-box">
            <div class="d-flex justify-content-between mb-4">
                <!-- Direkte lenker til Login og Register sidene -->
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-toggle active">Logg inn</a>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-toggle">Registrer deg</a>
            </div>
        </div>
    </div>
}
