@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login/Register</title>
    <link href="~/css/layout.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" class="form-inline">
            <button type="submit" class="btn btn-link nav-link">Logout</button>
        </form>
    }
    else
    {
        <!-- Plassering av Welcome-teksten -->
        <div class="welcome-text">
            <h1>Welcome!</h1>
        </div>

        <!-- Login/Register boksen -->
        <div class="container d-flex align-items-center justify-content-center vh-100">
            <div class="card homepage-login-register-box">
                <div class="d-flex justify-content-between mb-4">
                    <a asp-area="Identity" asp-page="/Account/Login" class="homepage-btn-toggle active">Logg inn</a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="homepage-btn-toggle active">Registrer deg</a>
                </div>
            </div>
        </div>
    }
</body>
</html>
