@model InstagramMVC.Models.Note

<div class="card mb-4">
    <a asp-action="Details" asp-route-id="@Model.NoteId" class="text-decoration-none">
        <div class="card-body">
            <h4 class="card-title">Title: @Model.Tittel</h4>
            <p class="card-text">@Model.Innhold</p>
            <p class="card-text"><small class="text-muted">Opprettet: @Model.OpprettetDato.ToString("yyyy-MM-dd HH:mm:ss")</small></p>
        </div>
    </a>

    <!-- Rediger og Slett knapper, kun tilgjengelig for eieren -->
    @if (User.Identity.Name == Model.username)
    {
        <a asp-action="Update" asp-route-id="@Model.NoteId" class="btn btn-warning">Rediger</a>
        <a asp-action="Delete" asp-route-id="@Model.NoteId" class="btn btn-danger">Slett</a>
    }

    <!-- Kommentarer Seksjon -->
    <div class="card-footer">
        <h5>Kommentarer:</h5>
        @await Html.PartialAsync("_CommentTable", Model.Kommentarer)
        <!-- Legg til ny kommentar -->
        <form asp-action="CreateCommentNote" asp-controller="Kommentar" method="post">
            <input type="hidden" name="NoteId" value="@Model.NoteId" />
            <div class="form-group">
                <textarea class="form-control" name="KommentarBeskrivelse" placeholder="Skriv din kommentar her..." required></textarea>
            </div>
            <button type="submit" class="btn btn-success btn-sm">Kommenter</button>
        </form>
    </div>
</div>
