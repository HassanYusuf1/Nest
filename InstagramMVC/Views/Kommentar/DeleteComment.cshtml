@model InstagramMVC.Models.Kommentar

<h2>Slett Kommentar</h2>

<p>Er du sikker p√• at du vil slette denne kommentaren?</p>
<div>
    <p><strong>Kommentar:</strong> @Model.KommentarBeskrivelse</p>
    <p><small><strong>Skrevet:</strong> @Model.KommentarTid.ToString("yyyy-MM-dd HH:mm")</small></p>
