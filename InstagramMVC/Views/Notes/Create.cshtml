@model InstagramMVC.Models.Note

<h2>Opprett et nytt notat</h2>

<form asp-action="Create" method="post">
    <textarea asp-for="Innhold" rows="4" cols="50" placeholder="Skriv ditt notat her..."></textarea>
    <br />
    <button type="submit">Post Notat</button>
</form>

<div>
    <a asp-action="Index">Tilbake til notat-feed</a>
</div>
