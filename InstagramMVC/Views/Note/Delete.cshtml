@model InstagramMVC.Models.Note

<h2>Delete Note</h2>

<h3>Are you sure you want to delete this Note?</h3>
<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Item Id</dt>
        <dd class="col-sm-10">@Model.NoteId</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.NoteId" method="post">
        <input type="hidden" name="source" value="@TempData["Source"]" /> <!-- Add hidden field for source -->

        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@((TempData["Source"] as string) == "MyPage" ? Url.Action("MyPage", "Note") : Url.Action("Notes", "Note"))" class="btn btn-secondary">Cancel</a> <!-- Redirect based on source -->
    </form>
</div>
