@model InstagramMVC.ViewModels.NotesViewModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body class="notes-page">
    <div class="notes-container">
        <h1>Notes Feed</h1>
        <div class="notes-column">
            @foreach (var note in Model.Notes)
            {
                <div class="note-card">
                    @{
                        ViewData["returnUrl"] = Url.Action("Notes");
                    }
                    @await Html.PartialAsync("_NoteList", note, ViewData)
                </div>
            }
        </div>
    </div>
</body>
</html>
