@model InstagramMVC.Models.Comment

<h2>Delete Comment</h2>

<p>Are you sure you want to delete this comment?</p>
<div>
    <p><strong>Comment:</strong> @Model.CommentDescription</p>
    <p><small><strong>Written:</strong> @Model.CommentTime.ToString("yyyy-MM-dd HH:mm")</small></p>
</div>

<form asp-action="DeleteConfirmedCommentNote" asp-route-id="@Model.CommentId" method="post">
    <input type="hidden" asp-for="CommentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Details", "Note", new { id = Model.PictureId })" class="btn btn-secondary">Cancel</a>
</form>
