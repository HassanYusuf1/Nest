@model InstagramMVC.Models.Comment

<div class="container mt-4">
    <h4>Add comment</h4>
    <form asp-action="CreateCommentNote" method="post" class="d-flex align-items-center">
        <input type="hidden" asp-for="NoteId" />
        
        <div class="form-group flex-grow-1 mr-2">
            <textarea asp-for="CommentDescription" class="form-control" rows="1" placeholder="Write comment here..."></textarea>
            <span asp-validation-for="CommentDescription" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary ml-2">Comment</button>
    </form>
</div>
