@model InstagramMVC.Models.Bilde

<h2>Upload New Image</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div>
        <label>Title</label>
        <input type="text" asp-for="Tittel" class="form-control" />
    </div>
    <div>
        <label>Description</label>
        <textarea asp-for="Beskrivelse" class="form-control"></textarea>
    </div>
    <div>
        <label>Select Image</label>
        <input type="file" asp-for="BildeUrl" accept="image/*" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
