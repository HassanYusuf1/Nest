@model InstagramMVC.Models.Bilde

<h2>Delete Image</h2>

<p>Are you sure you want to delete this image?</p>
<div>
    <img src="@Model.BildeUrl" alt="@Model.Tittel" style="width:200px;" />
    <h3>@Model.Tittel</h3>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.BildeId" method="post">
    <input type="hidden" name="returnUrl" value="@TempData["ReturnUrl"]" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@TempData["ReturnUrl"]" class="btn btn-secondary">Cancel</a>
</form>