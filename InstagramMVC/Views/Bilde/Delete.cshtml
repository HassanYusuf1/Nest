@model InstagramMVC.Models.Bilde

<h2>Delete Image</h2>

<p>Are you sure you want to delete this image?</p>
<div>
    <img src="@Model.BildeUrl" alt="@Model.Tittel" style="width:200px;" />
    <h3>@Model.Tittel</h3>
</div>

<form asp-action="DeleteConfirmed" method="post" asp-route-id="@Model.BildeId">
    <input type="hidden" asp-for="BildeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Bilde")" class="btn btn-secondary">Cancel</a>
</form>
