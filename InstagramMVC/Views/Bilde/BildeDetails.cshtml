@model InstagramMVC.Models.Bilde

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <img src="@Model.BildeUrl" class="img-fluid" alt="@Model.Tittel" />
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h2>@Model.Tittel</h2>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <p>@Model.Beskrivelse</p>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12">
            <p><strong>Uploaded on:</strong> @Model.OpprettetDato.ToString("yyyy-MM-dd")</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <a asp-action="Edit" asp-route-id="@Model.BildeId" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.BildeId" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

   <div class="row mt-4">
        <div class="col-md-12">
            <h4>Kommentarer:</h4>
            <partial name="_CommentTable" model="Model.Kommentarer" />
        </div>
    </div>

  <div class="row mt-4">
    <div class="col-md-12">
        <h4>Legg til kommentar</h4>
        <form asp-controller="Kommentar" asp-action="CreateComment" method="post" class="d-flex align-items-center">
            
            <input type="hidden" name="BildeId" value="@Model.BildeId" />
            
            
            <div class="form-group flex-grow-1 mr-2">
                <textarea name="KommentarBeskrivelse" class="form-control" rows="1" placeholder="Skriv din kommentar her..."></textarea>
            </div>
            
           
            <button type="submit" class="btn btn-primary ml-2">Legg til kommentar</button>
        </form>
    </div>
</div>


 